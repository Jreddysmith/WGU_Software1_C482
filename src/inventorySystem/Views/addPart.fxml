<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="inventorySystem.Controllers.AddPartController" xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="15" >
    <padding> <Insets top="25" right="25" bottom="10" left="25" /> </padding>
    <Text style="-fx-font-size: 12pt" text="Add Part" GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2" />
    <RadioButton fx:id="in_house" mnemonicParsing="false" text="In House" GridPane.columnIndex="1"
                 GridPane.rowIndex="0" />
    <RadioButton fx:id="outsourced" mnemonicParsing="false" text="Outsourced" GridPane.columnIndex="2"
                 GridPane.rowIndex="0" />

    <Label text="ID" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="part_id" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Name" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="part_name" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="INV" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="inv" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Price/Cost" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="price_cost" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Max" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextField fx:id="max" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label text="Min" GridPane.rowIndex="5" GridPane.columnIndex="2" />
    <TextField fx:id="min" GridPane.columnIndex="3" GridPane.rowIndex="5" />

    <Label text="Company Name" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <TextField fx:id="company_name" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button onAction="#savePart" text="Save" />
        <Button fx:id="cancel_button" onAction="#cancelButton" text="Cancel" />
    </HBox>

</GridPane>